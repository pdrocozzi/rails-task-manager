<h1><%= @task.title %></h1>

<div class="bg-light p-3 my-3">
  <%= @task.details %>
</div>

<% if @task.completed %>
  <input type="checkbox" checked disabled> Well done!
<% else %>
  <input type="checkbox" disabled> C'mon, you can do it!
<% end %>

<p class="mt-3">
  <%= link_to "Edit this task", edit_task_path(@task) %> |
  <%= link_to "Back to list", tasks_path %>
</p>
